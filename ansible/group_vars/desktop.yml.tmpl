---
dotfiles_stow_dir: ~/.dotfiles
dotfiles_stow_dir_theme: ~/.dotfiles/themes

dotfiles_awm: true
dotfiles_awm_stow_dir: awesomewm
dotfiles_awm_default_theme: miami

{{ if eq .system.sound "alsa" -}}
dotfiles_audio_backend: alsa
{{ end -}}

dotfiles_external_font_items:
  - { name: CyberPunk, src: 'https://dl.dafont.com/dl/?f=cyberpunks' }
  - { name: MaterialDesign, src: 'https://github.com/Templarian/MaterialDesign-Font/archive/master.zip' }

dotfiles_external_nerd_font_items:
  - { name: Iosevka, hash: c9c661d28756abad70bea9339dd3673548737214ebec8e8481c0966cedc56931 }
  - { name: SpaceMono, hash: f7c864da3d4057fce7163181ae1dd85a6175c5e55a12a5410a00e57302cc7aa8 }

dotfiles_external_wallpaper_items:
  - https://github.com/szorfein/walls/archive/main.zip

{{ if (and (hasKey .system "gpu") (ne .system.gpu "none")) -}}
dotfiles_gpu_driver: {{ .system.gpu }}
{{ end -}}

dotfiles_mpd: true
dotfiles_mpd_music_dir: ~/musics

dotfiles_tmux: true
dotfiles_tmux_stow_dir: tmux

dotfiles_vifm: true
dotfiles_vifm_stow_dir: vifm

dotfiles_vim: true
dotfiles_vim_stow_dir: vim
dotfiles_vim_plugin_git_items:
  - edkolev/tmuxline.vim
  - dense-analysis/ale
  - ryanoasis/vim-devicons
  - lilydjwg/colorizer
  - Yggdroot/indentLine
  - mengelbrecht/lightline-bufferline
  - airblade/vim-gitgutter
  - christoomey/vim-tmux-navigator
  - itchyny/lightline.vim
  - itchyny/vim-gitbranch
  - preservim/nerdtree

dotfiles_vim_plugin_tar_items:
  - { url: https://github.com/szorfein/ombre.vim/archive/refs/heads/main.tar.gz,
      name: ombre }

dotfiles_xorg_stow_dir: .x
dotfiles_xst: true

dotfiles_zsh: true
dotfiles_zsh_theme_dir: ~/.oh-my-zsh/custom/themes
dotfiles_zsh_theme_items:
  - { url: 'https://github.com/spaceship-prompt/spaceship-prompt/archive/refs/tags/v4.10.1.tar.gz',
      name: spaceship-prompt }
dotfiles_zsh_link_items:
  - { src: ~/.oh-my-zsh/custom/themes/spaceship-prompt/spaceship.zsh-theme,
      dest: ~/.oh-my-zsh/custom/themes/spaceship.zsh-theme }
