# general ------------ foreground ---- background -----------------------------
color error             red             brightblack
color indicator         magenta         brightblack # currently highlighted message
color markers           color2          default
color message           default         default
color normal            default         default
color prompt            default         default
color search            color84         default
color status            color5          brightblack
color tilde             cyan            default # blank line padding
color tree              cyan            default # thread tree
color sidebar_divider   brightblack     black

# message index ------ foreground ---- background -----------------------------
color index             red             default   ~D # deleted messages
color index             yellow          default   ~F # flagged messages
color index             cyan            default   ~N # new messages
color index             color12         default   ~Q # messages which have been replied to
color index             color215        default   ~T # tagged messages
color index             color141        default   ~v # messages part of a collapsed thread

# message headers ---- foreground ---- background -----------------------------
color hdrdefault        color5          default
color header            color15         default   ^Subject:.*

# message body ------- foreground ---- background -----------------------------
color attachment        color9          default
color body              color12         default   [\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+               # email addresses
color body              color2          default   (https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+        # URLs
color body              color13         default   (^|[[:space:]])\\*[^[:space:]]+\\*([[:space:]]|$) # *bold* text
color body              color7          default   (^|[[:space:]])_[^[:space:]]+_([[:space:]]|$)     # _underlined_ text
color body              color7          default   (^|[[:space:]])/[^[:space:]]+/([[:space:]]|$)     # /italic/ text
color quoted            color2          default
color quoted1           color117        default
color quoted2           color5          default
color quoted3           color13         default
color quoted4           color14         default
color signature         color14         default
