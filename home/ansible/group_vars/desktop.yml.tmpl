---
dotfiles_stow_dir: ~/.dotfiles
dotfiles_stow_dir_theme: ~/.dotfiles/themes

dotfiles_awm: true
dotfiles_awm_stow_dir: awesomewm
dotfiles_awm_default_theme: miami

{{ if (or (eq .sound "alsa") (eq .sound "pulseaudio")) -}}
dotfiles_audio_backend: {{ .sound }}
{{ end -}}

dotfiles_emacs: true

dotfiles_external_font_zip_items:
  - name: CyberPunk
    url: https://dl.dafont.com/dl/?f=cyberpunks
  - name: MaterialDesign
    url: https://github.com/Templarian/MaterialDesign-Font/archive/master.zip
  - name: Dot-Fonts
    url: https://github.com/szorfein/fonts/archive/refs/heads/main.zip
    hash: 5e4c76f89e65287b7ea9113532df65456da78fc8f107ffe7bc9434b00281bf06

dotfiles_external_nerd_font_items:
  - name: SpaceMono
    hash: f7c864da3d4057fce7163181ae1dd85a6175c5e55a12a5410a00e57302cc7aa8

dotfiles_external_wallpaper_items:
  - name: wallpaper
    url: https://github.com/szorfein/walls/archive/main.zip
    hash: 17d060a4f0fa4fda45466a3afac79f728bf6434e75d3b22d92925f5087299933

{{ if (or (eq .gpu "intel_gen7") (eq .gpu "intel")) -}}
dotfiles_gpu_driver: {{ .gpu }}
{{ end -}}

dotfiles_mpd: true
dotfiles_mpd_music_dir: ~/musics

dotfiles_neomutt: true
dotfiles_neomutt_mail_dir: ~/.mail
dotfiles_neomutt_accounts_dir: [ 'Personal' ]

dotfiles_tmux: true
dotfiles_tmux_stow_dir: tmux

dotfiles_vifm: true
dotfiles_vifm_stow_dir: vifm

dotfiles_vim: true
dotfiles_vim_stow_dir: vim
dotfiles_vim_plugin_git_items:
  - edkolev/tmuxline.vim
  - dense-analysis/ale
  - ryanoasis/vim-devicons
  - lilydjwg/colorizer
  - Yggdroot/indentLine
  - mengelbrecht/lightline-bufferline
  - airblade/vim-gitgutter
  - christoomey/vim-tmux-navigator
  - itchyny/lightline.vim
  - itchyny/vim-gitbranch
  - preservim/nerdtree

dotfiles_vim_plugin_tar_items:
  - name: ombre
    url: https://github.com/szorfein/ombre.vim/archive/refs/heads/main.tar.gz

dotfiles_xorg_stow_dir: .x
dotfiles_xst: true

dotfiles_zsh: true
dotfiles_zsh_theme_dir: ~/.oh-my-zsh/custom/themes
dotfiles_zsh_theme_items:
  - name: spaceship-prompt
    url: https://github.com/spaceship-prompt/spaceship-prompt/archive/refs/tags/v4.10.1.tar.gz
dotfiles_zsh_link_items:
  - src: ~/.oh-my-zsh/custom/themes/spaceship-prompt/spaceship.zsh-theme
    dest: ~/.oh-my-zsh/custom/themes/spaceship.zsh-theme
