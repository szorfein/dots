---
#####################
#  DISPLAY MANAGER  #

display_manager_sddm: true
display_manager_background:
  url: 'https://github.com/szorfein/dm-background/archive/refs/heads/sddm.tar.gz'
  name: glitch.mp4
  sum: 'ccc1bdcb621d5a475d45da333b5dfa0e1f96a4b2b133fd850056ebf9edbc4f20'
display_manager_theme:
  url: 'https://github.com/stuomas/delicious-sddm-theme/archive/refs/heads/master.tar.gz'
  name: delicious
  background_dir: background
  sum: '20dda1a210cf736dc0454fca9c81edd564c87ebf66e022023071842759b7a960'
display_manager_theme_customize:
  - regexp: '^glowcolor='
    line: 'glowcolor=#BBA33393'
  - regexp: '^iconoverlay='
    line: 'iconoverlay=#FF000000'

##############
#  DOTFILES  #

dotfiles_stow_dir: ~/.dotfiles
dotfiles_stow_dir_theme: ~/.dotfiles/themes

dotfiles_awm: true
dotfiles_awm_stow_dir: awesomewm
dotfiles_awm_default_theme: miami

{{ if eq .sound "alsa" "pulseaudio" -}}
dotfiles_audio_backend: {{ .sound }}
{{ end -}}

dotfiles_emacs_doom: true

dotfiles_external: true
dotfiles_external_font_reaver_cache_dir: ~/.cache/reaver/fonts
dotfiles_external_font_reaver_items:
  - cyberpunk.zip
  - material-design.zip
  - dot-fonts.zip
  - space-mono.zip

dotfiles_external_wallpaper_items:
  - name: wallpaper
    url: https://github.com/szorfein/walls/archive/main.zip
    hash: 17d060a4f0fa4fda45466a3afac79f728bf6434e75d3b22d92925f5087299933

{{ if eq .gpu "intel_gen7" "intel" "nouveau" -}}
dotfiles_gpu_driver: {{ .gpu }}
{{ end -}}

dotfiles_mpd: true
dotfiles_mpd_music_dir: ~/musics

dotfiles_neomutt: true
dotfiles_neomutt_mail_dir: ~/.mail
dotfiles_neomutt_accounts_dir: [ 'Personal' ]

dotfiles_tmux: true
dotfiles_tmux_stow_dir: tmux

dotfiles_vifm: true
dotfiles_vifm_stow_dir: vifm

dotfiles_vim: true
dotfiles_vim_stow_dir: vim
dotfiles_vim_reaver_cache_dir: ~/.cache/reaver/vim
dotfiles_vim_reaver_items:
  - ale.tar.gz
  - colorizer.tar.gz
  - indentLine.tar.gz
  - lightline.tar.gz
  - lightline-bufferline.tar.gz
  - nerdtree.tar.gz
  - ombre.tar.gz
  - tmuxline.tar.gz
  - vim-devicons.tar.gz
  - vim-gitbranch.tar.gz
  - vim-gitgutter.tar.gz
  - vim-tmux-navigator.tar.gz

{{ if ne .keymap "en" }}
dotfiles_xorg_keymap: {{ .keymap }}
{{ end }}
dotfiles_xorg_stow_dir: .x
dotfiles_xst: true

dotfiles_zsh: true
dotfiles_zsh_theme_dir: ~/.oh-my-zsh/custom/themes
dotfiles_zsh_theme_items:
  - name: spaceship-prompt
    url: https://github.com/spaceship-prompt/spaceship-prompt/archive/refs/tags/v4.10.1.tar.gz
dotfiles_zsh_link_items:
  - src: ~/.oh-my-zsh/custom/themes/spaceship-prompt/spaceship.zsh-theme
    dest: ~/.oh-my-zsh/custom/themes/spaceship.zsh-theme

#################
#  WEB BROWSER  #

{{ if eq .web "brave" }}
web_browser_brave: true
{{ else if eq .web "librewolf" }}
web_browser_librewolf: true
{{ end }}
