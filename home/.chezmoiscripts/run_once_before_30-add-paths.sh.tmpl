#!/usr/bin/env sh

cyan="\033[0;96m"
white="\033[0;97m"
endc="\033[0m"

msg() {
  echo ""
  echo "$cyan--------------------------------------------------$endc"
  echo "$cyan-->$white $1 $endc"
  echo ""
}

bye() {
  echo ""
    echo "$cyan-->$white End for $0 $endc"
    echo "$cyan--------------------------------------------------$endc"
}

msg "Execute $0..."

add_dir() {
  [ -d $1 ] || mkdir -p $1
}

add_file() {
  [ -f $1 ] || touch $1
}

# dirs
add_dir ~/.vim/pack/dotfiles/start
add_dir ~/images
add_dir ~/musics
add_dir ~/.config/mpd/playlists
add_dir ~/.mail/Personal
add_dir ~/.config/awesome/config
add_dir ~/.config/awesome/theme

chmod -R 700 ~/.mail

# files
add_file ~/.config/mpd/database
add_file ~/.config/mpd/state
add_file ~/.mail/div1
add_file ~/.mail/div2

trap bye EXIT
